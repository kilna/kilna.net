# Source parent directory's .envrc for shared environment variables
source_env ..

# Use asdf to manage Hugo version
use asdf

export SERVER_PORT=4291
export CLOUDFLARE_ACCOUNT_ID=$(wrangler whoami | grep -o '[a-f0-9]\{32\}' | head -1)
export CLOUDFLARE_PAGES_PROJECT=$(grep '^name = ' wrangler.toml | head -1 | sed 's/name = "\(.*\)"/\1/')
export CLOUDFLARE_PAGES_DASHBOARD_URL=https://dash.cloudflare.com/$CLOUDFLARE_ACCOUNT_ID/pages/view/$CLOUDFLARE_PAGES_PROJECT
